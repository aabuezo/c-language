{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C11: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-std=c11",
				"-Wall",
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/build/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}